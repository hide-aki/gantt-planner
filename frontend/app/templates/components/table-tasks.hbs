{{#if tasks.length}}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Text
            </th>
            <th>
                Start date
            </th>
            <th>
                Duration
            </th>
            <th>
                Progress
            </th>
            <th>
                Parent
            </th>
            {{#unless project}}
                <th>
                    Project
                </th>
                <th colspan="3">
                    Actions
                </th>
            {{/unless}}
        </tr>
        </thead>
        <tbody>
        {{#each tasks as |task|}}
            <tr>
                <td>
                    {{task.id}}
                </td>
                <td>
                    {{task.text}}
                </td>
                <td>
                    {{format-date task.start_date}}
                </td>
                <td>
                    {{format-duration task.duration}}
                </td>
                <td>
                    {{format-progress task.progress}}
                </td>
                <td>
                    {{task.parent}}
                </td>
                {{#unless project}}
                    <td>
                        {{task.project}}
                    </td>
                    <td>
                        {{link-to "Edit" "tasks.edit" task}}
                    </td>
                    <td>
                        {{link-to "Show" "tasks.show" task}}
                    </td>
                    <td>
                        <a href="#" {{action "remove" task}}>Remove</a>
                    </td>
                {{/unless}}
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p id="blankslate">
        No Tasks found
    </p>
{{/if}}
